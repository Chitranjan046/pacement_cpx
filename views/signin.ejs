<!DOCTYPE html>
<html lang="en">
<head>
	<%- include('_bootstrap_meta')%>
	<title>Sign In</title>
</head>
<body style="background-color:gray">
<header>
	<nav class="navbar"
		style="
				display: flex;
                align-items: center;
                justify-content: space-between;
                height: 100px;
                box-shadow: 0 8px 6px -6px black;
                padding: 0px 30px;
                background-color: rgb(224, 97, 23);
				
			">
		<a class="navbar-brand" href="#">CPX</a>
		<div>
			<a href="/users/signin" class="btn btn-primary">Sign In</a>
			<a href="/users/signup" class="btn btn-secondary ml-3">Sign Up</a>
		</div>
	</nav>
</header>

<div class="container mt-5">
	<div class="row justify-content-center">
		<div class="col-lg-6">
			<div class="card"
			style="
			background-color: rgb(227, 198, 32);
			box-shadow: 0 8px 6px -6px black;
			">
				<div class="card-body">
					<h4 class="card-title text-center">Sign In</h4>
					<form action="/users/create-session" method="POST" id="signin-form">
						<!-- Email input -->
						<div class="form-group">
							<label for="email">Email</label>
							<input type="email" class="form-control" id="email" placeholder="Enter your email" name="email" required />
						</div>

						<!-- Password input -->
						<div class="form-group">
							<label for="password">Password</label>
								<input type="password" id="password" class="form-control" name="password" required />
						</div>

						<!-- Submit button -->
						<button type="submit" class="btn btn-success btn-block">Sign in</button>
					</form>
				</div>
				<div class="card-footer text-center">
					<p>No Register? <a href="/users/signup">Sign Up</a></p>
				</div>
			</div>
		</div>
	</div>
</div>

<%- include('_bootstrap_script')%>
</body>
</html>
